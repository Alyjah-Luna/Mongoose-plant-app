<%- include('../partials/header') %>

<h2>Plant List</h2>
<table id="list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Origin</th>
      <th>Water Requirements</th>
      <th>Sunlight Requirements</th>
      <th>Difficulty</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% plants.forEach((p) => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.type %></td>
        <td><%= p.origin %></td>
        <td><%= p.waterRequirement %></td>
        <td><%= p.sunRequirement %></td>
        <td><%= p.difficulty %></td>
        <td><form action="/plants/<%= p.id %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">Delete</button></td>
        <td><a id="edit-plant" href="/plants/<%= p.id %>/edit">Edit Plant</a></td>
        <td><a href="/plants/<%= p._id %>">Details</a></td>
      </tr>
      <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
