<%- include('../partials/header') %>

<section id="show-page">
  <div>Name: </div>
  <div><%= plants.Name %></div>
  <div>Type: </div>
  <div><%= plant.Type %></div>
  <div>Origin: </div>
  <div><%= plant.origin %></div>
  <div>Water Requirements: </div>
  <div><%= plant.waterRequirements %></div>
  <div><%= plant.sunlightRequirements %></div>
  <form id="add-form" action="/plants/<%= plant._id %>" method="POST">
    <select name="itId">
      <%- plants.map(f => 
        `<option value="${p._id}">${p.name}</option>`
      ).join('') %>
    </select>
    <button type="submit">Add to List</button>
  </form>
</section>
<br><br><h2>Comments</h2>
<% if(user) { %>
  <form id="add-comment-form" method="POST"
    action="/plants/<%= plant._id %>/comments">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <label>Difficulty Rating:</label>
    <select name="difficultyRating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5" selected>3</option>
    </select>
    <input type="submit" value="Add Comment">
  </form>
<% } %>


<% if (plant.comments.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Comment</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% plant.comments.forEach(function(c) { %>
        <% total += c.rating %>
        <tr>
          <td class="comment-user"><img alt="avatar" src="<%= c.userAvatar %>" referrerpolicy="no-referrer" ><%= c.userName %></td>
          <td><%= c.createdAt.toLocaleDateString() %></td>
          <td><%= c.content %></td>
          <td><%= c.rating %></td>
          <td>
            <% if (user?._id.equals(c.user)) { %>
              <form action="/comments/<%= c._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / plant.comments.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
  
<% } else { %>
  <h5>No Comments Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>
